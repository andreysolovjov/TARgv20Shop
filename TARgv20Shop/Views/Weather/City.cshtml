@model Targv20Shop.Models.Weather.City

@{
    ViewData["Title"] = "City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tallinn</h1>

<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <label asp-for="Name"></label>
            <span class="badge">@Model.Name</span>
            <br />

            <label asp-for="Temp"></label>
            <span class="badge">@Model.Temp °C</span>
            <br />

            <label asp-for="TempFeelsLike"></label>
            <span class="badge">@Model.TempFeelsLike °C</span>
            <br />

            <label asp-for="Humidity"></label>
            <span class="badge">@Model.Humidity %</span>
            <br />

            <label asp-for="Pressure"></label>
            <span class="badge">@Model.Pressure Hpa</span>
            <br />

            <label asp-for="Wind"></label>
            <span class="badge">@Model.Wind Km/h</span>
            <br />

            <label asp-for="Weather"></label>
            <span class="badge">@Model.Weather</span>

        </div>

    </div>

</div>